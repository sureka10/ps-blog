<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<div class=jumbotron>
<table>
  <thead>
    <div class=row>
          <div class=col-md-4>Title1</div>
          <div class=col-md-4>Body</div>
          <th PostLenght</th>
          <th WordCount </th>
          <th colspan="3"></th>
      </div>
  </thead>
  </div>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= post.body.length %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      
    <% end %>
  </tbody>
</table>

<br>

